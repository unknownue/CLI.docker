{
    // Color Scheme
    "workbench.colorTheme": "Nord",
    // https://code.visualstudio.com/api/references/theme-color
    "workbench.colorCustomizations": {
        "editorInlayHint.background": "#88c0d005",
        // "editorInlayHint.typeForeground": "#65b6ad8c",
        "editorInlayHint.typeForeground": "#dadada9d",
        // "editorInlayHint.parameterForeground": "#65b6ad8c",
        "editorInlayHint.parameterForeground": "#dadada9d",
        
        "editor.background": "#1A1B25",
        "activityBar.background": "#16161E",
        "activityBar.border": "#3b414f",
        "editorWidget.background": "#16161E",
        "editorGutter.background": "#16161E",
        "editorSuggestWidget.background": "#16161E",
        "statusBar.debuggingBackground": "#b36e0e",
        "panel.background": "#16161E",
        "sideBar.background": "#16161E",
        "sideBarSectionHeader.background": "#2a3042",
        "statusBar.background": "#48557a",
        "statusBarItem.hoverBackground": "#566590",
        "tab.inactiveBackground": "#16161E",
        "tab.activeBackground": "#383a43",
        "editorGroupHeader.tabsBackground": "#16161E",
        "editorGroupHeader.tabsBorder": "#333a4f",
        "terminal.background": "#191919",
        "titleBar.activeBackground": "#16161E",
        "titleBar.border": "#333a4f",
        "titleBar.inactiveBackground": "#21232a",
    },
    // https://github.com/rust-lang/rust-analyzer/blob/master/editors/code/package.json
    "editor.tokenColorCustomizations": {
        "strings": "#87d5b1",
        "[Nord]": {
            "textMateRules": [
                {
                    "name": "[Rust] Entity types",
                    "scope": "source.rust entity.name.type",
                    "settings": {
                        "foreground": "#B7C1E4",
                    }
                },
                {
                    "name": "[Rust] Function",
                    "scope": "entity.name.function.rust",
                    "settings": {
                        "foreground": "#6C92CE",
                    }
                },
                {
                    "name": "Keyward",
                    "scope": "keyword",
                    "settings": {
                        "foreground": "#7CD2F1",
                    }
                },
                {
                    "name": "Functin parameter",
                    "scope": "variable.parameter",
                    "settings": {
                        "foreground": "#a2e8ed",
                    }
                },
                {
                    "name": "[Rust] Constant",
                    "scope": "variable.other.constant.rust",
                    "settings": {
                        // "foreground": "#63a1b1",
                        "foreground": "#a9dbed",
                    }
                },
                {
                    "name": "[Rust] Module",
                    "scope": "meta",
                    "settings": {
                        // "foreground": "#A28EE0",
                        "foreground": "#11A0B3",
                    }
                },
            ]
        }
    },
}